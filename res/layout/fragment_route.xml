<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<!-- The main content view -->
  	<RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
		
		    <ScrollView 
		        android:layout_width="350px"
		        android:layout_height="fill_parent"
		        android:background="@color/drawer">
				<LinearLayout
				android:id="@+id/site_list"
		    	android:layout_width="350px"
		   	 	android:layout_height="fill_parent"
		    	android:orientation="vertical" >
				</LinearLayout>
		    </ScrollView>
		     
		   	<LinearLayout
			android:id="@+id/schedule"
			android:layout_below="@+id/m"
			android:layout_above="@+id/save"
			android:layout_marginLeft="350px"
			android:layout_width="fill_parent"
		  	android:layout_height="fill_parent"
		   	android:orientation="vertical">
		   	
		   	    
			</LinearLayout>   
			
		   	<Button
		    android:id="@+id/m"
		    android:layout_marginLeft="350px"
		    android:layout_width="100px"
		    android:layout_height="wrap_content"
		    android:background="@color/button"
        	android:textColor="@color/button_text"
		    android:text="早"
		    android:onClick="onClick_Event" />
		   	<Button
		    android:id="@+id/d"
		    android:layout_toRightOf="@+id/m"
		    android:layout_width="100px"
		    android:layout_height="wrap_content"
		    android:background="@color/button"
        	android:textColor="@color/button_text"
		    android:text="中"
		    android:onClick="onClick_Event" />
		   	<Button
		    android:id="@+id/n"
		    android:layout_toRightOf="@+id/d"
		    android:layout_width="100px"
		    android:layout_height="wrap_content"
		    android:background="@color/button"
        	android:textColor="@color/button_text"
		    android:text="晚" 
		    android:onClick="onClick_Event"/>
		   	
		   	<Button
		    android:id="@+id/save"
		    android:layout_marginLeft="350px"
		    android:layout_width="300px"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:layout_alignParentBottom="true"
		    android:background="@color/button"
        	android:textColor="@color/button_text"
		    android:text="儲存" 
		    android:onClick="onClick_Save"/>
		   	
		   	
	</RelativeLayout>
	
	<!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/line"
        android:dividerHeight="1dp"
        android:background="@color/drawer"
        android:textColor="@color/button_text"/>
</android.support.v4.widget.DrawerLayout>