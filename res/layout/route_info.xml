<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/name"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:padding="5dp"
		android:textColor="@color/dialog_text"
		android:textSize="22sp"
		android:textStyle="bold" />

	<Button
		android:id="@+id/morning"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_below="@+id/name"
		android:background="@color/button"
        android:textColor="@color/button_text"
		android:text="早" />
	<ListView
		android:id="@+id/MListView"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/morning"
		android:layout_marginLeft="20dp"
		android:textColor="@color/dialog_text" />
	
	<Button
		android:id="@+id/afternoon"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_below="@+id/MListView"
		android:background="@color/button"
        android:textColor="@color/button_text"
		android:text="午" />
	
	<ListView
		android:id="@+id/AListView"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/afternoon"
		android:layout_marginLeft="20dp"
		android:textColor="@color/dialog_text"  />
	
	<Button
		android:id="@+id/night"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_below="@+id/AListView"
		android:background="@color/button"
        android:textColor="@color/button_text"
		android:text="晚" />	
	
	<ListView
		android:id="@+id/NListView"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/night"
		android:layout_marginLeft="20dp"
		android:textColor="@color/dialog_text" />

</RelativeLayout>
